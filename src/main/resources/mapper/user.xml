<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
클래스를 타입으로 정의 할 때는 resultMap을 생성하여 컬럼명과 일치하도록 만들어준다
join을 할 때 생기는 문제점이 있기 때문에 이런식으로 해결
property => 엔티티의 변수명    column => 데이터베이스 변수명
-->
<mapper namespace="com.korit.springboot.mapper.UserMapper">
    <resultMap id="userEntity" type="com.korit.springboot.entity.UserEntity">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb
        values (default, #{username}, #{password}, #{name}, #{email})
    </insert>
    <select id="findUserByUsername" resultType="userEntity">
        select
            user_id,
            username,
            password,
            name,
            email
        from
            user_tb
        where
            username = #{username}
    </select>
    <select id="findUserByUserId" resultType="userEntity">
        select
            user_id,
            username,
            password,
            name,
            email
        from
            user_tb
        where
            userId = #{userId}
    </select>
</mapper>